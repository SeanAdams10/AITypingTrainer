{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.defaultInterpreterPath": "C:\\Python\\Python313\\python.exe",
    
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["tests"],
    "python.envFile": "${workspaceFolder}/.env"


    // Enable Ruff everywhere in this workspace
    "ruff.nativeServer": "on",              // Use Rust LSP (fastest) ï¹˜ default is "auto"
    "ruff.lineLength": 100,                 // Mirrors pyproject
    // Optional: if you let Ruff *format* as well
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",        // Run Ruff fixes on save
        "source.organizeImports": "explicit"
        }
    },
    // If you ONLY want linting (keep Black for formatting)
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
        }
    }

}