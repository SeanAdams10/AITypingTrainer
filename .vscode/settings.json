{
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    "python.testing.pytestArgs": ["tests"],
    "python.envFile": "${workspaceFolder}/.env",


    // Enable Ruff everywhere in this workspace
    "ruff.nativeServer": "on",              // Use Rust LSP (fastest) ï¹˜ default is "auto"
    "ruff.lineLength": 100,                 // Mirrors pyproject
    // Optional: if you let Ruff *format* as well
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",        // Run Ruff fixes on save
        "source.organizeImports": "explicit"
        }
    },
    "python-envs.pythonProjects": [
        {
            "path": "",
            "envManager": "ms-python.python:venv",
            "packageManager": "ms-python.python:pip"
        }
    ]




}
